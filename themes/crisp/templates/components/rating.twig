{% if rating is not defined %}
  {% set rating = "N/A" %}
{% endif %}

{% if rating == "N/A" %}
  <span class="badge badge-dark">{{ 'components.rating.class.none'|translate }}</span>
{% endif %}

{% if rating == "A" %}
  <span class="badge badge-success">{{ 'components.rating.class.a'|translate }}</span>
{% endif %}

{% if rating == "B" %}
  <span class="badge badge-ranking-B">{{ 'components.rating.class.b'|translate }}</span>
{% endif %}

{% if rating == "C" %}
  <span class="badge badge-warning">{{ 'components.rating.class.c'|translate }}</span>
{% endif %}

{% if rating == "D" %}
  <span class="badge badge-ranking-D">{{ 'components.rating.class.d'|translate }}</span>
{% endif %}

{% if rating == "E" %}
  <span class="badge badge-danger">{{ 'components.rating.class.e'|translate }}</span>
{% endif %}



