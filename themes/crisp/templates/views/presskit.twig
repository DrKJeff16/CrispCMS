{% set currentPage = 'presskit' %}
{% set pageTitle = 'views.presskit.title'|translate %}
{% set error = false %}



{% extends "base.twig" %}

{% block content %}
  {{ include("components/navbar.twig") }}

  <div class="jumbotron" id="api">
    <div><h1>{{ 'views.presskit.title'|translate }}</h1></div>
    <!-- 0x000119 -->
    <a role="button" class="btn btn-outline-primary" href="/{{ locale }}/presskit/download/">{{ 'views.presskit.button.download.text'|translate }}</a>
  </div>


  <div class="container">


    <p>
      {{ 'views.presskit.container.text'|translate|raw }}
    </p>


    <div class="row mb-5">

      <div class="col-4">
        <div>
          <center>
            <img style="max-width:512px;" src="{{ includeResource("img/branding/guidelines.svg") }}" alt="image">
          </center>
        </div>
      </div>
    </div>
  </div> <!-- /container -->
{% endblock %}
